def updateCentroid(listofpoints):
    #takes a list of points belonging to a centroid
    #and spits out a new centroid in form of a tuple
    n = len(listofpoints)
    sumx = 0
    sumy = 0
    
    for i in listofpoints:
        sumx = sumx + i[0]

    for i in listofpoints:
        sumy = sumy + i[1]
    if n == 0:
        n = 1
    x = sumx/n
    y = sumy/n

    return (x,y)

def newIteration(centroid, lista, listb):

    
