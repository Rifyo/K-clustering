def generate_coord(scalar):
    random.seed(None)
    # Function returns x and y coordinate
    # scaled by input
    x = random.random()
    y = random.random()

    x = x*scalar
    y = y*scalar
    
    
    return x,y

def create_field(nrofdots,scalar):
