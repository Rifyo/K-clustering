    for i in tupl:
        plt.scatter(i[0],i[1])
    plt.show()



x,y = create_field(10,10)
tuplist = makeTupleList(x,y)
centroid = [(3,3),(7,7)]

a = euclid_Dist(centroid[0],tuplist)
b = euclid_Dist(centroid[1],tuplist)

